{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "minimumReleaseAge": "3 days",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchManagers": ["mise"],
      "matchDatasources": ["java-version"],
      "minimumReleaseAgeBehavior": "timestamp-optional",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "groupName": "non-major"
    }
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "datasourceTemplate": "npm",
      "depNameTemplate": "@biomejs/biome",
      "fileFormat": "json",
      "managerFilePatterns": [
        "**/biome.{json,jsonc}"
      ],
      "matchStrings": [
        "{\"currentValue\": $split($.\"$schema\",(\"/\"))[-2]}"
      ]
    }
  ]
}
